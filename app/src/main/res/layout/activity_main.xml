<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/titleTB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mediumPurple"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/input"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTB"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/result"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputET"
        app:layout_constraintVertical_bias="0.005" />

    <GridLayout
        android:id="@+id/buttonGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTV"
        app:layout_constraintVertical_bias="0.3">

        <Button
            android:id="@+id/divButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:text="/" />

        <Button
            android:id="@+id/oneButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/_1" />

        <Button
            android:id="@+id/twoButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/_2" />

        <Button
            android:id="@+id/threeButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/_3" />

        <Button
            android:id="@+id/multButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/mult" />

        <Button
            android:id="@+id/fourButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/_4" />

        <Button
            android:id="@+id/fiveButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/_5" />

        <Button
            android:id="@+id/sixButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/_6" />

        <Button
            android:id="@+id/difButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/dif" />

        <Button
            android:id="@+id/sevenButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/_7" />

        <Button
            android:id="@+id/eightButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/_8" />

        <Button
            android:id="@+id/nineButtonBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/_9" />

        <Button
            android:id="@+id/addButtonBTN"
            android:layout_height="140dp"
            android:layout_rowSpan="3"
            android:layout_column="3"
            android:text="@string/add" />

        <Button
            android:id="@+id/zeroButtonBTN"
            android:layout_width="180dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="@string/_0" />

        <Button
            android:id="@+id/equalsButtonBTN"
            android:layout_width="260dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:text="@string/equals" />

        <Button
            android:id="@+id/resetButtonBTN"
            android:layout_width="350dp"
            android:layout_row="6"
            android:layout_columnSpan="4"
            android:text="@string/reset" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>